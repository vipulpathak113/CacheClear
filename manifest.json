{
  "manifest_version": 2,
  "name": "Web Cleaner",
  "version": "1.0",
  "description": "Clean Cache, Cookies, History,etc on a single click.",
  "browser_action": {
    "default_title": "Web Cleaner",
    "default_icon": "cleaning.png",
    "default_popup": "popup.html"
  },

  "permissions": ["activeTab", "storage", "browsingData", "history"],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "options_page": "options.html",
  "icons": {
    "16": "cleaning.png",
    "48": "cleaning.png",
    "128": "cleaning.png"
  }
}
